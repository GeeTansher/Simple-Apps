<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainTextStyleTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_height">61dp</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:backgroundTint">#6D101326</item>
        <item name="android:padding">@dimen/buttonPadding</item>
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>

    <style name="outOfQuestionThemTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="currentScoreTV" parent="outOfQuestionThemTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>